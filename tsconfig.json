{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "mj-design": ["components/index.ts"],
      "mj-design/esm/*": ["components/*"],
      "mj-design/lib/*": ["components/*"]
    },
    "target": "esnext", // 版本
    "module": "commonjs", // 格式
    "jsx": "react",
    "declaration": true, // 为每一个 ts 文件生成 .d.ts 文件
    "declarationDir": "lib", // 声明文件到处目录
    "strict": true,
    "moduleResolution": "node", // 规定寻找引入文件的路径为 node 标准
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["components", "global.d.ts"],
  "exclude": ["components/**/demo", "components/**/__tests__"]
}