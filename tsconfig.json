{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "happy-ui": ["components/index.ts"],
      "happy-ui/esm/*": ["components/*"],
      "happy-ui/lib/*": ["components/*"]
    },
    "target": "esnext", // 版本
    "module": "commonjs", // 格式
    "jsx": "react",
    "declaration": true, // 为每一个 ts 文件生成 .d.ts 文件
    "declarationDir": "lib", // 声明文件到处目录
    "strict": true,
    "moduleResolution": "node", // 规定寻找引入文件的路径为 node 标准
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["components", "global.d.ts"],
  "exclude": ["node_modules"]
}